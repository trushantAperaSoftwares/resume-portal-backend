generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  role     Role
  jobs     Job[]
}

model Job {
  id             Int       @id @default(autoincrement())
  title          String
  description    String
  client         String?   // optional dropdown
  skills         String[]  // multi-select dropdown
  salary         Float
  internalSalary Float?
  location       Location
  type           JobType
  createdById    Int
  createdBy      User      @relation(fields: [createdById], references: [id])
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

enum Location {
  REMOTE
  MUMBAI
  DELHI
  BANGALORE
  HYDERABAD
  CHENNAI
  PUNE
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERN
  FREELANCING
}


enum Role {
  ADMIN
  HR
  CLIENT
}

model Candidate {
  id                 Int        @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String     @unique
  mobile             String?    
  yearsOfExperience  Int
  education          String?
  noticePeriod       Int
  resume             String     // File path for resume
  skills             Skill[]    @relation("CandidateSkills")
  createdAt          DateTime   @default(now())
  updatedAt          DateTime   @updatedAt
}

model Skill {
  id          Int         @id @default(autoincrement())
  name        String      @unique    
  candidates  Candidate[] @relation("CandidateSkills")
}

